extends partial/base

include partial/post-preview

block description
    meta(name="description", content="All posts tagged with " + page.tag)
    meta(name="keywords", content=page.tag)

block site_title
    = "Tag: " + page.tag + " | " + config.title

block header
    include partial/tag-header

block content
    div(class="container", role="main")
        .row
            .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
                .posts-list
                    - page.posts.each(function (post) {
                        +post_preview(post)
                    - })
                        
                include partial/pagination

    script(id="dsq-count-scr", src="//#{theme.comment.id}.disqus.com/count.js")