
footer.site-footer
    div.container-fluid
        div.row
            .col-lg-10.col-lg-offset-1.col-xs-10.col-xs-offset-1
                .row
                    .col-lg-4
                        h4!="https://www.zghurskyi.com/ Â© " + date(Date.now(), 'YYYY')
                        p
                            em!="\"" + theme.header.motto + "\""

                        p
                            a(href="/privacy-policy/")="Privacy policy"
                        p.
                            This work is licensed under a <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/4.0/"><img alt="Creative Commons License" style="border-width:0" src="https://i.creativecommons.org/l/by-nc-sa/4.0/80x15.png" /></a>

                    .col-lg-4
                        h4.marked!="Recent articles"
                        section.recent-posts
                            != list_posts({limit: 5})

                    .col-lg-4
                        h4.marked!="Stay connected"
                        .social-links
                            ul
                                each value, key in theme["footer"]
                                    li
                                        a(href=value.link, onclick="window.open(this.href);return false;")
                                            span.fa(class=value.icon)

                        h4.marked!="Most popular tags"

                        section.tagcloud
                            != tagcloud(site.tags.sort('length', 'desc').limit(25), { unit: 'pt', min_font: 8, max_font: 32, start_color: '#6a6a6a', end_color: '#bababa', color: true })


    section.poweredby
        ul.text-center
            li
                span="Published with "
                a(href="https://hexo.io", onclick="window.open(this.href);return false;")
                    img(src="/img/logo-hexo.png")
            li
                span="Hosted on "
                a(href="https://github.com/zghurskyi/zghurskyi.github.io", onclick="window.open(this.href);return false;")
                    img(src="/img/logo-github.png")
            li
                span="Deployed with "
                a(href="https://travis-ci.org/zghurskyi/zghurskyi.github.io", onclick="window.open(this.href);return false;")
                    img(src="/img/logo-travis.png")
